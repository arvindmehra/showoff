<%= form_for @widget do |w| %>
<%#= form_tag widgets_path, method: :post do %>

  <div class="form-group">
    <label for="Name">Name</label>
    <%= w.text_field :name, placeholder: "Name", class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="Description">Description</label>
    <%= w.text_area :description, placeholder: "Description", class: "form-control" %>
  </div>
  <div class="form-group">
    <label for="Kind">Kind</label>
    <%= w.text_field :kind, placeholder: "Hidden/Visible", class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= w.submit 'Submit', type: "submit", class: "btn btn-success" %>
  </div>
<% end %>
